Algoritmo "Juntar_Nomes"

Var
    pn, sn, un, nome : caractere


Inicio
    escreva ("Digite seu primeiro nome:")
    leia (pn)
    escreva ("Digite seu sobrenome:")
    leia (sn)
    escreva ("Digite seu último nome:")
    leia (un)
    nome <- pn + " " + sn + " " + un

    escreva ("Olá ", nome, "!")


Fimalgoritmo